<h1>Edit Product</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>
    <%= label_tag :product_name %>
    <%= text_field_tag :product_name, @product.product_name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
    <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.images.first.image_url %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
  <div>
    <%= label_tag :key_points %>
    <%= text_field_tag :key_points, @product.key_points %>
  </div>
  <%= submit_tag "Edit Product" %>

<% end %>